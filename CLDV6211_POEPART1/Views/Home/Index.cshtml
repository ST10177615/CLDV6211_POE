@{
    ViewBag.Title = "Home";
}

<!-- Razor view generated with assistance from ChatGPT -->

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Montserrat', sans-serif;
        font-size: 16px;
        line-height: 1.6;
        color: #333;
    }

    h1 {
        font-size: 36px;
        font-weight: bold;
        color: #333;
    }

    .lead {
        font-size: 24px;
        color: #666;
    }

    p {
        font-size: 18px;
        color: #444;
    }

    .btn-primary {
        font-size: 20px;
        background-color: yellow; /* Change button background color to yellow */
        color: #333; /* Set text color to contrast with the yellow background */
        border-color: yellow; /* Set border color to match the background */
    }

    .container {
        margin-top: 50px;
    }

    .home-image {
        max-width: 100%; /* Set maximum width to maintain aspect ratio */
        height: auto; /* Allow the image to scale with its width */
        display: block; /* Ensure proper alignment */
        margin: 0 auto 20px; /* Center the image horizontally and add some bottom margin */
    }
</style>

<div class="container text-center">
    <div class="row">
        <div class="col-md-12">
            <img src="~/Images/KHUMALO CRAFT.jpg" alt="Home Image" class="img-fluid home-image">
            <h1>Welcome to KhumaloCraft</h1>
            <p class="lead">Discover beautifully handcrafted products from artisans around the world.</p>
            <p>At KhumaloCraft, we curate a collection of unique, handmade items that celebrate craftsmanship and culture. Browse our selection and find the perfect piece to complement your style.</p>
            <a class="btn btn-primary btn-lg" href="@Url.Action("MyWork", "Home")">Explore Our Craftwork</a>
        </div>
    </div>
</div>