@{
    ViewBag.Title = "Home";
}

<!-- Razor view generated with assistance from ChatGPT -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <style>
        /* Shared styles */
        body {
            font-family: 'Montserrat', sans-serif;
            font-size: 16px;
            line-height: 1.6;
            color: #333;
        }

        h1 {
            font-size: 36px;
            font-weight: bold;
            color: #333;
        }

        .lead {
            font-size: 24px;
            color: #666;
        }

        p {
            font-size: 18px;
            color: #444;
        }

        .btn-primary {
            font-size: 20px;
            background-color: yellow;
            color: #333;
            border-color: yellow;
        }

        .container {
            margin-top: 50px;
        }

        .home-image {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 0 auto 20px;
        }
    </style>
</head>
<body>
    <div class="container text-center">
        <div class="row">
            <div class="col-md-12">
                <img src="~/Images/KHUMALO CRAFT.jpg" alt="Khumalo Craft" class="img-fluid home-image">
                <h1>Welcome to KhumaloCraft</h1>
                <p class="lead">Discover beautifully handcrafted products from artisans around the world.</p>
                <p>At KhumaloCraft, we curate a collection of unique, handmade items that celebrate craftsmanship and culture. Browse our selection and find the perfect piece to complement your style.</p>
                <a class="btn btn-primary btn-lg" href="@Url.Action("MyWork", "Home")">Explore Our Craftwork</a>
            </div>
        </div>
    </div>
</body>
</html>
